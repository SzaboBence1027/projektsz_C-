<Window x:Class="jarmuvekGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:jarmuvekGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="193*"/>
            <RowDefinition Height="58*"/>
            <RowDefinition Height="88*"/>
        </Grid.RowDefinitions>

        <Label Content="Új Esemény" Grid.Row="0"></Label>
        <TextBox x:Name="tbx_Uj_esemeny" Grid.Row="0" Width="300" Height="50" Margin="246,15"/>
        <Button x:Name="btn_esemenyMent" Content="Menés" Width="100" Height="50" Margin="591,15,101,15" Click="btn_esemenyMent_Click"/>
        <ListBox x:Name="tbx_jarmuvek" Grid.Row="1"/>

        <Button Content="Listázáas" x:Name="btn_kszorulolistazas" Grid.Row="2" Click="btn_kszorulolistazas_Click"></Button>
        <ListBox x:Name="lbx_karbantartszorulo" Grid.Row="3"/>


    </Grid>
</Window>
