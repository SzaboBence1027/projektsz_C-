<Window x:Class="_2025_02_24_órai_munka.Feladatszerkesztő"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2025_02_24_órai_munka"
        mc:Ignorable="d"
        Title="Feladatszerkesztő" Height="450" Width="348.77">
    <Grid>
        <StackPanel>
            <Label Height="40" Content="Név" Background="Green" />
            <TextBox x:Name="tb_nev" Height="40" FontSize="30" Text="{Binding Nev, UpdateSourceTrigger=Explicit}"/>
            <Label Height="40" Content="Leiras" Background="Green" />
            <TextBox x:Name="tb_leiras" Height="40" FontSize="30" Text="{Binding Leiras, UpdateSourceTrigger=Explicit}"/>
            <Label Height="40" Content="Hatarido" Background="Green" />
            <TextBox x:Name="tb_hatarido" Height="40" FontSize="30" Text="{Binding Hatarido, UpdateSourceTrigger=Explicit}"/>
            <CheckBox x:Name="cbx_kesz" Content="Kész" IsChecked="{Binding Kesz,UpdateSourceTrigger=Explicit}"/>
            <Button x:Name="btn_mentes" Content="Mentés" Height="40" Margin="10,80,10,0" FontSize="26" Click="btn_mentes_Click" />
            
        </StackPanel>
    </Grid>
</Window>
