            <Button Content="Button" Margin="20px"/>
            <Button Content="Button" Margin="20px"/>
            <Button Content="Button" Margin="20px"/>


        </StackPanel>


        <WrapPanel Grid.Row="1">
            <Button Content="Button" Margin="20px"/>
            <Button Content="Button" Margin="20px"/>
            <Button Content="Button" Margin="20px"/>
            
        </WrapPanel>
    </Grid>
</Window>
